# ============================================
# База данных PostgreSQL (Timeweb Managed DB)
# ============================================
DATABASE_URL="postgresql://user:password@host:5432/nasledniki?schema=public"

# ============================================
# JWT Аутентификация
# ============================================
JWT_SECRET="сгенерируйте-длинный-случайный-ключ-минимум-32-символа"
JWT_REFRESH_SECRET="другой-длинный-случайный-ключ-минимум-32-символа"
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# ============================================
# S3 Object Storage (Timeweb S3)
# ============================================
S3_ENDPOINT="https://s3.timeweb.cloud"
S3_BUCKET="nasledniki"
S3_ACCESS_KEY="ваш-access-key"
S3_SECRET_KEY="ваш-secret-key"
S3_REGION="ru-1"

# ============================================
# Email (SMTP — Timeweb Mail)
# ============================================
SMTP_HOST="smtp.timeweb.ru"
SMTP_PORT=465
SMTP_USER="noreply@наследникпобеды.рф"
SMTP_PASS="пароль-от-почтового-ящика"
SMTP_FROM="Наследники Победы <noreply@наследникпобеды.рф>"

# ============================================
# Приложение
# ============================================
PORT=3000
FRONTEND_URL="https://наследникпобеды.рф"

# ============================================
# Первый администратор (создаётся при seed)
# ============================================
ADMIN_EMAIL="admin@наследникпобеды.рф"
ADMIN_PASSWORD="сменить-на-надёжный-пароль"
